        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modificationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.keyToken)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idUser }) |
            @Html.ActionLink("Details", "Details", new { id=item.idUser }) |
